<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    >

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/landLinePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="landline_phone"
                app:hide_valid_indicator="true"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/mobilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="mobile_phone"
                app:hide_valid_indicator="false"
                app:edit_text_hint="Téléphone Mobile - hint personnalisé à partir du xml"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="phone"
                app:hide_valid_indicator="false"
                app:edit_text_hint="Téléphone - La validation a été désactivé dans l'activity"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/eMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="email"
                app:hide_valid_indicator="false"
                app:color_style="@style/PersoTextInputLayout.EditText.Blue"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/eMailConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="email_confirmation"
                app:hide_valid_indicator="true"
                app:edit_text_hint="Confirmation Email - L'indication valide a été désactivé dans xml"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="password"
                app:hide_valid_indicator="false"
                app:color_style="@style/PersoTextInputLayout.EditText.Blue"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/passwordConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="confirm_password"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="first_name"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="last_name"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="address"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/postalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="postal_code"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="city"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="birthday_older_than_18"
        />

        <Button
                android:id="@+id/btnValidateForm"
                android:text="Validation du formulaire"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/resultat"
                tools:text="Le formulaire est VALIDE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
        />

    </LinearLayout>
</ScrollView>